<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<FlowPane
	fx:id="root"
	styleClass="setting" stylesheets="@/style/SettingPane.css"
	fx:controller="com.acgist.snail.window.setting.SettingController"
	xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
	
	<ScrollPane fx:id="scrollPane" styleClass="scrollPane" hbarPolicy="AS_NEEDED">
		<VBox>
			<HBox styleClass="path">
				<TextFlow styleClass="name">
					<Label>
						下载目录：
					</Label>
				</TextFlow>
				<Button fx:id="path" text="选择目录" onAction="#handlePathAction" />
				<TextFlow styleClass="pathValue">
					<Text fx:id="pathValue" />
				</TextFlow>
			</HBox>
			
			<HBox>
				<TextFlow styleClass="name">
					<Label>
						同时下载任务数量：
					</Label>
				</TextFlow>
				<Slider fx:id="size" styleClass="slider" min="0" max="8" value="2" blockIncrement="1" majorTickUnit="1" minorTickCount="1" showTickLabels="true" showTickMarks="true" />
			</HBox>
			
			<HBox>
				<TextFlow styleClass="name">
					<Label>
						单个任务下载速度：
					</Label>
				</TextFlow>
				<Slider fx:id="buffer" styleClass="slider" min="0" max="10240" value="2048" blockIncrement="1024" majorTickUnit="1024" minorTickCount="1" showTickLabels="true" showTickMarks="true" />
			</HBox>
				
			<HBox>
				<TextFlow styleClass="name">
					<Label>
						下载完成弹出提示：
					</Label>
				</TextFlow>
				<CheckBox fx:id="notice" onAction="#handleNoticeAction" />
			</HBox>
			
			<HBox>	
				<TextFlow styleClass="name">
					<Label>
						启用P2P加速：
					</Label>
				</TextFlow>
				<CheckBox fx:id="p2p" onAction="#handleP2pAction" />
			</HBox>
		</VBox>
	</ScrollPane>
	
</FlowPane>