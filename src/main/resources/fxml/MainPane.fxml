<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane
	fx:id="root"
	styleClass="root,main" stylesheets="@/style/fxml.css"
	fx:controller="com.acgist.snail.window.main.MainController"
	xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
	
	<top>
		<HBox fx:id="header" styleClass="header">
			<Button fx:id="build" text="新建" onAction="#handleBuildAction" />
			<Button fx:id="start" text="开始" onAction="#handleStartAction" />
			<Button fx:id="pause" text="暂停" onAction="#handlePauseAction" />
			<Button fx:id="delete" text="删除" onAction="#handleDeleteAction" />
			<Button fx:id="about" text="关于" onAction="#handleAboutAction" />
			<Button fx:id="setting" text="设置" onAction="#handleSettingAction" />
		</HBox>
	</top>
	
	<center>
		<TableView fx:id="taskTable" styleClass="taskTable">
			<columns>
				<!--
				下载文件名称：轻音少女（点击名称查看详情）
				-->
				<TableColumn fx:id="name" text="名称" styleClass="name" />
				<!--
				任务状态：
					下载中：100KB/S
					暂停：暂停
					完成：完成
				-->
				<TableColumn fx:id="status" text="状态" styleClass="status" />
				<!--
				下载进度：
					下载中：20%（2G/4G）
					完成：100%（4G）
				-->
				<TableColumn fx:id="progress" text="进度" styleClass="progress" />
				<!--
				开始时间：2019-01-01 12:10
				-->
				<TableColumn fx:id="createDate" text="开始时间" styleClass="createDate" />
				<!--
				完成时间：
					下载中：剩余时间：2小时
					完成：2019-01-01 12:10
				-->
				<TableColumn fx:id="endDate" text="完成时间" styleClass="endDate" />
			</columns>
		</TableView>
	</center>
	
	<bottom>
		<HBox fx:id="footer" styleClass="footer">
			<HBox fx:id="footerButton" styleClass="footerButton">
				<Button fx:id="all" text="全部" onAction="#handleAllAction" />
				<Button fx:id="downloading" text="下载中" onAction="#handleDownloadingAction" />
				<Button fx:id="complete" text="下载完成" onAction="#handleCompleteAction" />
			</HBox>
			<HBox fx:id="footerStatus" styleClass="footerStatus">
				<Label fx:id="downloadSize" text="10">
					<tooltip>
						<Tooltip text="下载任务数量" />
					</tooltip>
				</Label>
				<Label text="↓" />
				<Label fx:id="downloadBuffer" text="200KB/S">
					<tooltip>
						<Tooltip text="下载速度" />
					</tooltip>
				</Label>
				<Label text="↑" />
				<Label fx:id="shareBuffer" text="200KB/S">
					<tooltip>
						<Tooltip text="上传速度" />
					</tooltip>
				</Label>
			</HBox>
		</HBox>
	</bottom>
	
</BorderPane>