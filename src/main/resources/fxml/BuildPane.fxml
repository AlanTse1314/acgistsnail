<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<FlowPane
	fx:id="root"
	styleClass="build" stylesheets="@/style/BuildPane.css"
	fx:controller="com.acgist.snail.window.build.BuildController"
	xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

	<VBox>
		<HBox>
			<TextFlow styleClass="name">
				<Label>
					请输入下载地址、磁力链接或选择种子文件：
				</Label>
			</TextFlow>
		</HBox>
		
		<HBox styleClass="pathValue">
			<TextFlow>
				<TextField fx:id="pathValue" />
			</TextFlow>
			<Button fx:id="torrent" text="选择种子" onAction="#handleTorrentAction" />
		</HBox>
		
		<HBox styleClass="option">
			<TextFlow styleClass="cancel">
				<Button fx:id="cancel" text="取消下载" onAction="#handleCancelAction" />
			</TextFlow>
			<TextFlow styleClass="build">
				<Button fx:id="build" text="开始下载" onAction="#handleBuildAction" />
			</TextFlow>
		</HBox>
	</VBox>
	
</FlowPane>